{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "An extended error",
  "type": "object",
  "allOf": [{"$ref": "raml-util/schemas/error.schema"}],
  "properties": {
    "overridableBlock": {
      "type": "object",
      "description": "Details of an overridable block the error is related to",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the block",
          "enum": [
            "patronBlock",
            "itemLimitBlock",
            "itemNotLoanableBlock"
          ]
        },
        "missingPermissions": {
          "type": "array",
          "description": "Missing Okapi permissions required to override the block",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "missingPermissions"
      ]
    }
  }
}
